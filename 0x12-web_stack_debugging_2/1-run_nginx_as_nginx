#!/usr/bin/env bash
# stop the nginx service if it's already running
groupadd nginx
useradd -g nginx nginx

chown -R nginx:nginx /var/log/nginx /var/lib/nginx /var/www/html
sed -i 's/user  nginx;/user nginx nginx;/g' /etc/nginx/nginx.conf
sed -i 's/listen       80;/listen       8080 default_server;/g' /etc/nginx/conf.d/default.conf
