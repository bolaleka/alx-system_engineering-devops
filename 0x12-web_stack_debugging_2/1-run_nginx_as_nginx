#!/usr/bin/env bash
# stop the nginx service if it's already running

# Create the nginx user and group
groupadd -r nginx
useradd -r -g nginx nginx

# Change the ownership of the nginx directories to the nginx user and group
chown -R nginx:nginx /var/log/nginx
chown -R nginx:nginx /var/lib/nginx
chown -R nginx:nginx /etc/nginx

# Edit the nginx configuration file to run as the nginx user and listen on port 8080
sed -i 's/user  nginx;/user  nginx;\nworker_processes  auto;\n/g' /etc/nginx/nginx.conf
sed -i 's/# server_names_hash_bucket_size 64;/worker_connections  1024;\n\n    server_names_hash_bucket_size 64;\n/g' /etc/nginx/nginx.conf
sed -i 's/listen       80;/listen       8080;/g' /etc/nginx/conf.d/default.conf

# Start nginx
nginx
